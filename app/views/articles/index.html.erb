<h2>Listing articles</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      
      <td><%=link_to 'Show', user_article_path(@user, article)%></td>
        <%if @user == current_user %>
        <td><%= link_to 'Edit', edit_user_article_path(current_user, article)%></td>
        <td><%= link_to 'Destroy', user_article_path(current_user, article), method: :delete, data: { confirm: 'Are you sure?'}%></td>
        <%end%>
    </tr>
  <% end %>
</table>