<div class = "post">
  <h2><%= link_to article.title, user_article_path(@user, article) %></h2>
  <p><%= article.text %></p>
  <%unless article.tags.empty?%>
		<p>Tags: 
			<%article.tags.each do |tag|%>
			<div class = "tag"><%=link_to tag.label, tag_path(@user, tag)%></div>
			<%end%>
		</p>
	<%end%>
  
  <%if @user == current_user %>
    <%= link_to 'Edit', edit_user_article_path(current_user, article)%> 
    <%= link_to 'Delete', user_article_path(current_user, article), method: :delete, data: { confirm: 'Are you sure?'}%>
  <%end%>
</div>


